{
  "name": "tabnews-clone",
  "version": "1.0.0",
  "description": "Creation and study project development of tabnews clone Filipe Deschamps from https://curso.dev/",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "services:wait:database": "node infra/scripts/wait-for-db-connection.js",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:prettier:fix",
      "npm run lint:eslint:check"
    ]
  },
  "author": "Ronaldo Rios",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "3.0.2",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "next": "14.2.15",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.13.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.3",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3"
  }
}
